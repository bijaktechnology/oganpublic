<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_double"
    android:paddingRight="@dimen/spacing_double"
    android:paddingTop="@dimen/spacing_triple">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_triple"
        android:gravity="center_horizontal"
        android:text="@string/report_success_title"
        android:textColor="#4a4a4a"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_triple"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3.5sp"
        android:text="@string/report_success_caption"
        android:textColor="#4a4a4a"
        android:textSize="16sp"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/report_success_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_triple"
        android:src="@drawable/ic_home"
        app:backgroundTint="@color/white"/>


</LinearLayout>
