<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prompt_input_data_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_88">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/bg_card_half"
        android:orientation="vertical"
        android:padding="@dimen/spacing_triple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/input_data_prompt_caption"
            android:textColor="@color/gray_69"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/prompt_input_data_btn_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_36dp"
            android:layout_marginTop="@dimen/spacing_triple"
            android:background="@drawable/btn_primary_rounded"
            android:text="@string/input_data_input_now"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_body"/>

        <Button
            android:id="@+id/prompt_input_data_btn_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_36dp"
            android:layout_marginTop="@dimen/spacing_double"
            android:background="?selectableItemBackground"
            android:text="@string/exit"
            android:textColor="@color/gray_69"
            android:textSize="@dimen/text_small_body"/>

    </LinearLayout>
</FrameLayout>
