<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/item_my_comment_image"
        android:layout_width="@dimen/view_padding_huge"
        android:layout_height="@dimen/view_padding_huge"
        android:layout_marginLeft="@dimen/spacing_double"
        android:layout_marginTop="@dimen/spacing_double"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_my_comment_image"
        android:layout_marginLeft="@dimen/spacing_double"
        android:layout_marginRight="@dimen/spacing_double"
        android:layout_toRightOf="@+id/item_my_comment_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_my_comment_txt_title"
            tools:text="Jalan Bolong\n12123123123123123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small_body"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_my_comment_txt_date"
            tools:text="5 Feb 2017 04:30 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_half"
            android:lineSpacingExtra="@dimen/spacing_half"
            android:textSize="@dimen/text_tiny_body"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_my_comment_image"
        android:layout_marginTop="@dimen/spacing_double"
        android:background="@color/colorGrey"/>

</RelativeLayout>
