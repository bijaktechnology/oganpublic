<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_88"
    android:orientation="vertical"
    android:padding="@dimen/view_padding_huge">

    <TextView
        android:id="@+id/family_picker_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:padding="@dimen/spacing_double"
        android:text="@string/family_picker_choose_family"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_body"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/family_picker_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/family_picker_txt_title"
        android:background="@color/white"/>

    <ProgressBar
        android:id="@+id/family_picker_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>
