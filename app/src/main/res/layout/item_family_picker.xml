<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_double"
    android:paddingLeft="@dimen/spacing_triple"
    android:paddingRight="@dimen/spacing_triple"
    android:paddingTop="@dimen/spacing_double">

    <TextView
        android:id="@+id/item_family_picker_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/text_title"
        tools:text="Marwan Bin Alfarizi"/>

    <TextView
        android:id="@+id/item_family_picker_txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_half"
        tools:text="Suami"/>

    <View
        style="@style/HorizontalDivider"
        android:layout_marginTop="@dimen/spacing_normal"/>

</LinearLayout>
