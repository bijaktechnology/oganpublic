<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_padding_bigger"
        android:layout_marginRight="@dimen/view_padding_bigger"
        android:layout_marginTop="@dimen/view_padding_bigger"
        android:gravity="center"
        android:text="@string/sos_thank_you"
        android:textSize="17sp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sos_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_triple"
        android:src="@drawable/ic_home"
        app:backgroundTint="@color/white"
        app:fabSize="normal"
        app:rippleColor="?colorPrimary"/>

</LinearLayout>
