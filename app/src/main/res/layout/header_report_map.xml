<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header_report_map_view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_double"
        android:layout_marginTop="@dimen/spacing_double">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_report_map_txt_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/text_body"
                tools:text="Sarah"/>

            <TextView
                android:id="@+id/header_report_map_txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_half"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/text_tiny_body"
                tools:text="Jl. Jend Sudirman.."/>

            <TextView
                android:id="@+id/header_report_map_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/text_tiny_body"
                tools:text="7 Jam Lalu"/>

            <TextView
                android:id="@+id/item_task_txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/spacing_half"
                android:background="@drawable/bg_status_wait"
                android:paddingBottom="@dimen/spacing_half"
                android:paddingLeft="@dimen/spacing_double"
                android:paddingRight="@dimen/spacing_double"
                android:paddingTop="@dimen/spacing_half"
                android:text="Menunggu"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tiny_body"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/spacing_double"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/header_report_map_txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_normal"
                android:textColor="#6e6e6e"
                android:textSize="@dimen/text_tiny_body"
                tools:text="Jalan Rusak"/>

            <ImageView
                android:id="@+id/header_report_map_img_category"
                android:layout_width="@dimen/view_padding_bigger"
                android:layout_height="@dimen/view_padding_bigger"
                android:src="@drawable/ic_banjir"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/header_report_map_view_top"
        android:background="@color/colorGrey"/>
</RelativeLayout>
